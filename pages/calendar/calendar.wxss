.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f8f8f8;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #FFD770;
  border-radius:  20px  20px 0 0;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  margin-top: 30px;
}

.header-left .dropdown {
  display: flex;
  align-items: center;
}

.dropdown-text {
  font-size: 32rpx;
  color: #333;
}


.chicken-icon {
  width: 150rpx;
  height: 150rpx;
  transform-origin: center; /* 中间为旋转中心 */
  transform: rotate(20deg);
}

.calendar-wrapper {
  padding: 10rpx;
  border-width: 15px;
  border-style: solid; 
  border-color: #FFD770; 
  border-radius: 0 0 20px 20px;
}

.calendar-header {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
}

.current-date {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin: 0 30rpx;
}

.arrow-left, .arrow-right {
  width: 30rpx;
  height: 30rpx;
}

.weekdays {
  display: flex;
  margin-bottom: 10rpx;
}

.weekday {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 0;
}

.days-grid {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 0;
}

.day {
  width: 14.28%;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
  position: relative;
}

.day text {
  font-size: 28rpx;
}

.prev-month-day text, .next-month-day text {
  color: #ccc;
}

.today {
  background-color: #ffefef;
  border-radius: 50%;
}

.checked {
  background: linear-gradient(90deg, #FFC107 0%, #FFD54F 100%);
  border-radius: 50%;
}

.checked text {
  color: #fff;
}

.check-icon {
  position: absolute;
  bottom: 5rpx;
  right: 10rpx;
  font-size: 20rpx;
  color: #fff;
  margin-bottom: 0;
}

.stats {
  padding: 20rpx 30rpx;
  text-align: center;
}

.stats-text {
  font-size: 28rpx;
  color: #333;
}