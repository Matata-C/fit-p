}
/* 轮播图容器样式 */
.diet-swiper {
  height: 180px; /* 可根据图片和布局调整高度，要容纳 diet-item */
}

.diet-item {
  border-radius: 10px;
  height: 160px;
  margin-bottom: 16px;
  position: relative; /* 关键：开启相对定位 */
  overflow: hidden; /* 防止文字超出容器 */
  /* 增加点击反馈 */
  cursor: pointer;
}

.foods {
  margin-top: 6px;
  width: 100%;
  height: 150px;
  border-radius: 8px;
  display: block; /* 消除图片底部间隙 */
}

/* 文字容器：绝对定位到图片左下方 */
.diet-text-container {
  position: absolute; /* 基于父容器定位 */
  left: 10px; /* 左间距 */
  bottom: 15px; /* 底部间距 */
  z-index: 10; /* 确保文字在图片上方显示 */
}

.diet-content {
  color: rgb(255, 255, 255); /* 文字颜色（白色更适配图片背景） */
  font-size: 15px; /* 文字大小 */
  font-weight: 650; /* 文字粗细 */
  text-shadow: 0 5px 5px rgba(0,0,0,0.3); /* 文字阴影，增强可读性 */
}

/* 弹窗样式 */
/* 遮罩层 */
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999; /* 遮罩层在底层 */
}
/* 弹窗容器 */
.popup-container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 85%;
  max-height: 70vh; /* 限制最大高度，超出可滚动 */
  background-color: white;
  border-radius: 12px;
  padding: 20px 15px;
  z-index: 1000; /* 弹窗在遮罩层上方 */
  overflow-y: auto; /* 内容过多时可滚动 */
}
/* 弹窗标题 */
.popup-title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 15px;
  padding-bottom: 10px;
  border-bottom: 1px solid #eee;
}
/* 弹窗内容 */
.popup-content {
  font-size: 14px;
  color: #666;
  line-height: 1.6; /* 行高增加可读性 */
}
/* 关闭按钮 */
.popup-close {
  position: absolute;
  top: 15px;
  right: 15px;
  font-size: 20px;
  color: #999;
  cursor: pointer;
}
.popup-close:active {
  color: #333; /* 点击时变色反馈 */
}

