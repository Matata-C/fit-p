/**index.wxss**/
/* 首页风格统一为分析/成就页风格 */

.container {
  padding: 24px 16px 16px 16px;
  min-height: 100vh;
  background: #fff;
}

/* 顶部栏样式 */
.header {
  margin-top: -15px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 18px 18px;
  background-color: #fffbe6;
  border-radius: 24px;
  box-shadow: 0 2px 12px rgba(255, 214, 0, 0.08);
  margin-bottom: 18px;
}
.header-left .dropdown {
  display: flex;
  align-items: center;
}
.dropdown-text {
  font-size: 16px;
  color: #ff6f91;
  margin-right: 5px;
  font-weight: bold;
}
.dropdown-icon {
  width: 14px;
  height: 14px;
}
.header-middle {
  display: flex;
  align-items: center;
}
.arrow-left, .arrow-right {
  width: 18px;
  height: 18px;
  margin: 0 8px;
}
.date-text {
  font-size: 16px;
  color: #222;
  font-weight: bold;
}
.header-right .calendar-icon {
  width: 22px;
  height: 22px;
}

/* 今日步数卡片 */
.step-card {
  background-color: #fffbe6;
  border-radius: 24px;
  box-shadow: 0 4px 24px rgba(255, 214, 0, 0.13);
  padding: 24px 20px;
  margin-bottom: 16px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.step-info {
  display: flex;
  flex-direction: column;
}
.step-date {
  font-size: 15px;
  color: #888;
  margin-bottom: 4px;
}
.step-label {
  font-size: 15px;
  color: #ff6f91;
  margin-bottom: 8px;
  font-weight: bold;
}
.step-number {
  font-size: 32px;
  font-weight: bold;
  color: #FFD600;
  margin-bottom: 4px;
}
.step-slogan {
  font-size: 13px;
  color: #bfa100;
}
.step-icon {
  width: 90px;
  height: 90px;
}

/* 饮食建议区域样式 */
.diet-title {
  font-size: 18px;
  font-weight: bold;
  color: #ff6f91;
  margin-bottom: 10px;
  margin-left: 5px;
}
.diet-swiper {
  height: 180px;
}
.diet-item {
  border-radius: 16px;
  height: 160px;
  margin-bottom: 16px;
  position: relative;
  overflow: hidden;
  cursor: pointer;
  box-shadow: 0 2px 8px rgba(255, 214, 0, 0.08);
}
.foods {
  margin-top: 6px;
  width: 100%;
  height: 150px;
  border-radius: 12px;
  display: block;
}
.diet-text-container {
  position: absolute;
  left: 10px;
  bottom: 15px;
  z-index: 10;
}
.diet-content {
  color: #fff;
  font-size: 16px;
  font-weight: 650;
  text-shadow: 0 5px 5px rgba(0,0,0,0.3);
}

/* 弹窗样式 */
.popup-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
}
.popup-container {
  position: fixed;
  top: 50%; left: 50%;
  transform: translate(-50%, -50%);
  width: 85%;
  max-height: 70vh;
  background-color: #fffbe6;
  border-radius: 28px;
  padding: 28px 18px;
  z-index: 1000;
  overflow-y: auto;
  box-shadow: 0 4px 24px rgba(255, 214, 0, 0.13);
}
.popup-title {
  font-size: 20px;
  font-weight: bold;
  color: #ff6f91;
  margin-bottom: 15px;
  padding-bottom: 10px;
  border-bottom: 1px solid #FFD600;
}
.popup-content {
  font-size: 15px;
  color: #888;
  line-height: 1.6;
}
.popup-close {
  position: absolute;
  top: 15px;
  right: 15px;
  font-size: 22px;
  color: #FFD600;
  cursor: pointer;
}
.popup-close:active {
  color: #ff6f91;
}

/* 卡片通用样式 */
.card {
  margin: 18px 0;
  padding: 24px 20px;
  background: #fff;
  border-radius: 24px;
  box-shadow: 0 4px 24px rgba(255, 214, 0, 0.13);
  border-left: 8px solid #FFD600;
  transition: box-shadow 0.2s;
}
.card-title {
  font-size: 20px;
  font-weight: bold;
  color: #ff6f91;
  margin-bottom: 8px;
  display: flex;
  align-items: center;
  gap: 6px;
}
.section-icon {
  font-size: 20px;
  margin-left: 4px;
}
.card-content {
  font-size: 16px;
  color: #888;
  margin-left: 8px;
}

/* 统计卡片 */
.stats-grid {
  display: flex;
  justify-content: space-between;
}
.stat-item {
  flex: 1;
  text-align: center;
}
.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFD600;
}
.stat-label {
  font-size: 24rpx;
  color: #888;
  margin-top: 10rpx;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.action-btn {
  flex: 1;
  margin: 0 10rpx;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
  background: linear-gradient(90deg, #FFA726 0%, #FFD600 100%);
  color: #fff;
  box-shadow: 0 2px 12px rgba(255, 152, 0, 0.15);
  border: none;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: transform 0.1s;
}
.action-btn:active {
  transform: scale(0.96);
  background: #FFD600;
}

/* 体重按钮区域 */
.weight-buttons {
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0;
}
.weight-record-btn, .weight-history-btn {
  background: linear-gradient(90deg, #FFD600 0%, #FFF6D1 100%) !important;
  color: #b07b00 !important;
  text-align: center;
  line-height: 90rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
  flex: 1;
  margin: 0 10rpx;
  box-shadow: 0 2px 4px rgba(255, 214, 0, 0.13);
  border: none;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 体重进度 */
.weight-progress.card {
  background: #fffbe6;
  border-left: 8px solid #FFD600;
}
.progress-container {
  width: 100%;
  background-color: #f5f5f5;
  height: 16rpx;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
  position: relative;
  overflow: hidden;
  box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
  margin-top: 20rpx;
}
.progress-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}
.progress-percentage {
  font-size: 48rpx;
  font-weight: bold;
  color: #FFD600;
  line-height: 1.2;
}
.progress-label {
  font-size: 24rpx;
  color: #888;
  margin-top: 8rpx;
}

/* 对话框样式 */
.dialog-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}
.dialog {
  width: 80%;
  background-color: #fffbe6;
  border-radius: 28px;
  padding: 40rpx;
  box-shadow: 0 4px 24px rgba(255, 214, 0, 0.13);
}
.dialog-title {
  font-size: 20px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
  color: #ff6f91;
}
.dialog-content {
  margin-bottom: 30rpx;
}
.dialog-content input {
  border: 1rpx solid #FFD600;
  border-radius: 12rpx;
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
  font-size: 32rpx;
  height: 90rpx;
  background: #fff;
}
.dialog-footer {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}
.dialog-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  background: linear-gradient(90deg, #FFA726 0%, #FFD600 100%);
  color: #fff;
  border: none;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}
.dialog-btn.cancel {
  background: #f5f5f5;
  color: #888;
}
.dialog-btn.confirm {
  background: linear-gradient(90deg, #FFA726 0%, #FFD600 100%);
  color: #fff;
}

/* 历史记录对话框样式 */
.history-dialog {
  width: 90%;
  max-height: 80vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  background: #fffbe6;
  border-radius: 28px;
  box-shadow: 0 4px 24px rgba(255, 214, 0, 0.13);
}
.history-content {
  flex: 1;
  overflow-y: auto;
  max-height: 60vh;
  padding: 0;
}
.history-list {
  width: 100%;
}
.history-header {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1px solid #FFD600;
  background-color: #fffbe6;
  font-weight: bold;
  font-size: 28rpx;
  color: #ff6f91;
}
.history-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1px solid #FFD600;
  font-size: 28rpx;
}
.header-date, .item-date {
  flex: 2;
  padding-left: 20rpx;
}
.header-weight, .item-weight {
  flex: 1;
  text-align: center;
}
.header-action {
  flex: 1;
  text-align: center;
}
.item-delete {
  flex: 1;
  text-align: center;
  color: #E53935;
}
.no-records {
  padding: 40rpx;
  text-align: center;
  color: #bbb;
  font-size: 28rpx;
}

/* 贴士 */
.tip-content {
  font-size: 18px;
  color: #ffb300;
  line-height: 1.5;
  font-weight: bold;
}

/* 其他细节样式可根据需要继续补充 */
.daily-tip .card-title {
  font-size: 20px;
  font-weight: bold;
  color: #ff6f91;
  margin-bottom: 8px;
}
.daily-tip .tip-content {
  font-size: 15px;
  color: #ffb300;
  line-height: 1.7;
  font-weight: normal;
}

.action-btn, .weight-record-btn, .weight-history-btn, .dialog-btn.confirm {
  background: linear-gradient(90deg, #FFD600 0%, #FFF6D1 100%) !important;
  color: #b07b00 !important;
  font-weight: bold;
  border: none;
  box-shadow: 0 2px 12px rgba(255, 214, 0, 0.10);
}

.stats-card.card {
  margin: 28px 0;
  padding: 14px 16px;
}

.daily-tip.card {
  margin: 28px 0 60px 0;
  padding: 14px 16px;
}

