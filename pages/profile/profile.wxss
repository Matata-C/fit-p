/* profile.wxss */
.container {
  padding: 0 16px 16px 16px;
  background: #ffffff;
  min-height: 100vh;
}

/* 头部样式 */
.header {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-radius: 12rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 75rpx;
  margin-right: 30rpx;
}

.nickname {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}

/* 统计部分样式 */
.stats-section {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.stats-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
}

.stats-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #FFD700;
}

.stat-label {
  font-size: 24rpx;
  color: #666666;
  margin-top: 8rpx;
}

/* 折叠面板样式 */
.collapse-section {
  background-color: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.collapse-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.arrow {
  width: 20rpx;
  height: 20rpx;
  border-right: 3rpx solid #999;
  border-bottom: 3rpx solid #999;
  transition: transform 0.3s;
}

.arrow-down {
  transform: rotate(45deg);
}

.arrow-up {
  transform: rotate(-135deg);
}

.collapse-content {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease-out;
}

.collapse-content.expanded {
  max-height: 2000rpx;
}

/* 目标设置表单样式 */
.goal-form {
  padding: 30rpx;
}

.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #f9f9f9;
  box-sizing: border-box;
}

/* 消耗输入组 */
.consumption-input-group {
  display: flex;
  align-items: center;
}

.consumption-input-group .form-input {
  flex: 1;
  margin-right: 10rpx;
}

.convert-btn, .edit-btn {
  padding: 0 20rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #4CAF50;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
  margin-left: 10rpx;
  white-space: nowrap;
}

.edit-btn {
  background-color: #999;
}

.gender-selector {
  display: flex;
  margin-bottom: 20rpx;
}

.gender-option {
  flex: 1;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  background-color: #f9f9f9;
  border: 1rpx solid #e0e0e0;
}

.gender-option:first-child {
  border-radius: 8rpx 0 0 8rpx;
  border-right: none;
}

.gender-option:last-child {
  border-radius: 0 8rpx 8rpx 0;
}

.gender-option.selected {
  background-color: #4CAF50;
  color: #fff;
  border-color: #4CAF50;
}

/* 摘要部分 */
.summary-section {
  background-color: #f5f9f5;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}

.summary-row {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
  font-size: 28rpx;
  border-bottom: 1rpx solid #e8f0e8;
}

.summary-row:last-child {
  border-bottom: none;
}

.summary-label {
  color: #666;
}

.summary-value {
  font-weight: bold;
  color: #4CAF50;
}

/* 健康提示 */
.health-tip {
  background-color: #fff8e1;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.health-tip-item {
  font-size: 24rpx;
  color: #ff9800;
  line-height: 1.6;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  background-color: #4CAF50;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
  margin-top: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 菜单部分样式 */
.menu-section {
  background-color: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.menu-item-left text {
  font-size: 28rpx;
  color: #333333;
}

.menu-item-right {
  display: flex;
  align-items: center;
}

.menu-item-right text {
  font-size: 26rpx;
  color: #999999;
  margin-right: 10rpx;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 版本信息 */
.version-info {
  text-align: center;
  margin-top: 60rpx;
}

.version-info text {
  font-size: 24rpx;
  color: #999999;
}

/* 用户卡片样式 */
.user-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
}

.avatar-container {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
  margin-right: 30rpx;
}

.user-stats {
  font-size: 28rpx;
  color: #666;
}

/* 目标卡片样式 */
.goal-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  color: #333;
}

.goal-content {
  display: flex;
  flex-wrap: wrap;
}

.goal-item {
  width: 33.33%;
  margin-bottom: 20rpx;
}

.goal-label {
  display: block;
  font-size: 24rpx;
  color: #888;
  margin-bottom: 8rpx;
}

.goal-value {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.no-goal {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
}

.no-goal text {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 20rpx;
}

.btn-set-goal {
  background-color: #07c160;
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  border: none;
}

/* 设置列表样式 */
.settings-list, .about-list {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
}

.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.settings-item:last-child {
  border-bottom: none;
}

.item-title {
  font-size: 30rpx;
  color: #333;
}

.item-right {
  display: flex;
  align-items: center;
}

.item-value {
  font-size: 28rpx;
  color: #888;
  margin-right: 10rpx;
}

/* 弹窗样式 */
.dialog {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.dialog-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
}

.dialog-container {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.dialog-title {
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.dialog-content {
  padding: 30rpx;
}

.input-group {
  margin-bottom: 20rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.dialog-footer {
  display: flex;
  border-top: 1rpx solid #eee;
}

.btn-cancel, .btn-confirm {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 32rpx;
  border-radius: 0;
  border: none;
}

.btn-cancel {
  background-color: #f5f7fa;
  color: #666;
}

.btn-confirm {
  background-color: #07c160;
  color: #fff;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.form-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 22px;
  font-weight: bold;
  color: #222;
  margin: 24px 0 12px 0;
  letter-spacing: 1px;
}

.login-btn {
  font-size: 24rpx;
  color: #ff6b81;
  background-color: #fff;
  padding: 6rpx 20rpx;
  display: inline-block;
  border-radius: 30rpx;
  border: 1rpx solid #ff6b81;
}

.tab-nav {
  display: flex;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #ff6b81;
  font-weight: bold;
}

.tab-item.active:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #ff6b81;
  border-radius: 3rpx;
}

.tab-content {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-section:last-child {
  border-bottom: none;
}

.reminder-tip {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.danger-button {
  background-color: #f56c6c;
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 30rpx;
}

.danger-button::after {
  border: none;
}

.about-section {
  padding: 30rpx;
}

.app-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
  margin-bottom: 30rpx;
}

.app-logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.app-version {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 24rpx;
}

.about-content {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.about-item {
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 30rpx;
}

.about-item:last-child {
  border-bottom: none;
}

.about-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.about-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.contact-text {
  color: #ff6b81;
  display: inline-block;
}

.copy-tip {
  font-size: 22rpx;
  color: #999;
  margin-top: 6rpx;
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.info-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.info-form {
  padding: 0 10rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item .label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.form-item input {
  width: 100%;
  height: 80rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.gender-group {
  display: flex;
  gap: 20rpx;
}

.gender-item {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
}

.gender-item.active {
  background: #4CAF50;
  color: #fff;
}

.weight-diff {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.diff-text {
  font-size: 28rpx;
  color: #666;
}

.diff-value {
  font-size: 32rpx;
  color: #4CAF50;
  font-weight: bold;
}

.btn-section {
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.save-btn:active {
  opacity: 0.9;
}
.card {
  margin: 16px 0;
  padding: 20px 18px;
  background: #fff;
  border-radius: 24px;
  box-shadow: 0 4px 24px rgba(255, 214, 0, 0.13);
  transition: box-shadow 0.2s;
}
.card-title {
  font-size: 18px;
  font-weight: bold;
  color: #222;
  margin-bottom: 6px;
}
.card-content {
  font-size: 15px;
  color: #888;
  margin-left: 8px;
}
.button {
  background: linear-gradient(90deg, #FFA726 0%, #FFD600 100%);
  color: #fff;
  border: none;
  border-radius: 18px;
  padding: 12px 32px;
  font-size: 17px;
  font-weight: bold;
  box-shadow: 0 2px 12px rgba(255, 152, 0, 0.15);
  transition: transform 0.1s;
}
.button:active {
  transform: scale(0.96);
} 