.container {
  background: #fffbe6;
  border-radius: 24px;
  padding: 24px 16px 16px 16px;
  min-height: 100vh;
}
.section-title {
  font-size: 18px;
  font-weight: bold;
  color: #ff6f91;
  margin: 24px 0 12px 0;
  letter-spacing: 1px;
  text-shadow: 0 2px 8px #fffde7;
}

.total-points {
  font-size: 16px;
  font-weight: bold;
  color: #FFD600;
  margin-bottom: 16px;
  padding: 8px 16px;
  background: #fff;
  border-radius: 16px;
  box-shadow: 0 2px 8px rgba(255, 214, 0, 0.15);
  text-align: center;
}
.achievement-list {
  margin-top: 8px;
}
.achievement-item {
  display: flex;
  align-items: center;
  margin: 14px 0;
  padding: 12px 10px 12px 10px;
  background: #fff;
  border-radius: 24px;
  box-shadow: 0 4px 24px rgba(255, 214, 0, 0.13);
  position: relative;
  transition: box-shadow 0.2s;
  border-left: 8px solid #FFD600;
}
.achievement-item.unlocked::before {
  background: #FFD600;
}
.achievement-item.locked::before {
  background: #eee;
}
.achieve-icon {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  margin-right: 10px;
  background: #FFF9E1;
  border-radius: 50%;
  border: 2px solid #FFD600;
}
.achievement-item.locked .achieve-icon {
  background: #f5f5f5;
  border-color: #eee;
  color: #bbb;
}
.achieve-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 4px;
}
.achieve-actions {
  display: flex;
  align-items: center;
}
.achieve-name {
  font-size: 15px;
  font-weight: bold;
  color: #ff6f91;
  margin-right: 4px;
  white-space: nowrap;
}
.achieve-reward, .achieve-reward.locked {
  position: absolute;
  right: 24px;
  top: 80px;
  margin: 0;
  background: #FFD600;
  color: #fff;
  font-size: 10px;
  font-weight: bold;
  border-radius: 8px;
  padding: 1px 8px;
  box-shadow: 0 2px 8px #FFD60033;
  white-space: nowrap;
}
.achieve-reward.locked {
  background: #eee;
  color: #bbb;
}
.achieve-detail {
  margin-top: 2px;
  font-size: 11px;
  color: #888;
  display: flex;
  gap: 6px;
}
.achieve-type {
  color: #FFA726;
}
.achieve-condition {
  color: #888;
}
.leaderboard-list {
  margin-top: 18px;
}
.leaderboard-item {
  display: flex;
  align-items: center;
  padding: 11px 16px;
  margin-bottom: 12px;
  border-radius: 18px;
  background: #fff;
  box-shadow: 0 2px 8px rgba(255, 214, 0, 0.08);
  border: 2px solid #fffbe6;
  transition: box-shadow 0.2s, border 0.2s, background 0.2s;
}
.leaderboard-item.top1 {
  background: linear-gradient(90deg, #fffbe6 0%, #fff7d6 100%);
  border: 2px solid #FFD600;
}
.leaderboard-item.top2 {
  background: linear-gradient(90deg, #f7fafd 0%, #e6f0fa 100%);
  border: 2px solid #B0C4DE;
}
.leaderboard-item.top3 {
  background: linear-gradient(90deg, #fdf6f0 0%, #fbeee6 100%);
  border: 2px solid #cd7f32;
}
.leaderboard-item.self {
  border: 2px solid #4A90E2;
  background: linear-gradient(90deg, #eaf6ff 0%, #f7fbff 100%);
  box-shadow: 0 4px 16px rgba(74,144,226,0.08);
}
.rank {
  width: 32px;
  font-weight: bold;
  color: #FFD600;
  font-size: 20px;
  text-align: center;
}
.user {
  flex: 1;
  margin-left: 8px;
  color: #ff6f91;
  font-size: 15px;
  font-weight: 500;
}
.score {
  color: #FF6B81;
  font-weight: bold;
  font-size: 15px;
  margin-left: 10px;
}
.voice-section {
  border: 2px solid #ffe066;
  border-radius: 16px;
  padding: 16px;
  margin-top: 18px;
  margin-bottom: 60px;
  background: #fffbe6;
}
.voice-tabs {
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-bottom: 12px;
  gap: 18px;
  z-index: 1;
}
.voice-tab {
  font-size: 15px;
  color: #ff6f91;
  padding: 6px 12px;
  border-radius: 16px;
  background: #fff8e1;
  font-weight: 500;
  letter-spacing: 1px;
  transition: background 0.2s, color 0.2s;
  box-shadow: 0 1px 4px #ffe06633;
}
.voice-tab.active {
  color: #fff;
  background: #FFD600;
  font-weight: bold;
  box-shadow: 0 2px 8px #FFD60033;
}
.voice-tab[data-tab="liked"], .voice-tab[data-tab="liked"].active {
  font-weight: bold;
}
.voice-tab[data-tab="all"] {
  font-weight: bold;
}
.voice-swiper {
  width: 100%;
  height: 60px;
  margin-bottom: 0;
  z-index: 1;
}
.voice-swiper-item {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 60px;
  padding: 0 10px;
  background: #fffbe6;
  border-radius: 12px;
  box-shadow: 0 2px 12px rgba(255, 214, 0, 0.10);
  animation: fadeInScale 0.4s;
  position: relative;
}
.voice-text {
  font-size: 14px;
  color: #FFB300;
  text-align: center;
  line-height: 1.5;
  font-weight: bold;
  width: 100%;
  letter-spacing: 0.5px;
  text-shadow: 0 2px 8px #fffde7;
}
.voice-btn-row {
  display: flex;
  flex-direction: row;
  gap: 12px;
  margin-top: 12px;
  width: 100%;
  justify-content: space-between;
  z-index: 1;
}
.voice-btn, .voice-like-btn, .voice-copy-btn, .voice-share-btn, .voice-autoplay-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
  text-align: center;
  height: 28px;
  min-width: 0;
  background: linear-gradient(90deg, #FFD600 60%, #ffe066 100%);
  color: #fff;
  border: none;
  border-radius: 16px;
  font-size: 13px;
  font-weight: bold;
  padding: 0 6px;
  margin: 0;
  box-shadow: 0 2px 8px #FFD60033;
  transition: background 0.2s, color 0.2s, transform 0.1s;
}
.voice-like-btn, .voice-copy-btn, .voice-share-btn, .voice-autoplay-btn {
  background: #fffbe6;
  color: #FFD600;
  border: 1px solid #FFD600;
}
.voice-btn:active, .voice-add-btn:active {
  background: #FFB300;
  transform: scale(0.97);
}
.voice-like-btn:active, .voice-copy-btn:active, .voice-share-btn:active, .voice-autoplay-btn:active {
  background: #FFF9E1;
  transform: scale(0.97);
}
.voice-add-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 10px;
  gap: 12px;
  width: 100%;
  z-index: 1;
}
.voice-add-input {
  flex: 1 1 auto;
  min-width: 0;
  border: 1.5px solid #FFD600;
  border-radius: 16px;
  padding: 5px 10px;
  font-size: 14px;
  background: #fff;
  color: #222;
  outline: none;
}
.voice-add-btn {
  flex: 0 0 54px;
  width: 54px;
  min-width: 36px;
  max-width: 72px;
  height: 28px;
  margin-left: 0;
  padding: 0 6px;
  font-size: 13px;
  border-radius: 16px;
  font-weight: bold;
  color: #fff;
  background: linear-gradient(90deg, #FFD600 60%, #ffe066 100%);
  box-shadow: 0 2px 8px #FFD60033;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
  text-align: center;
  transition: background 0.2s, color 0.2s, transform 0.1s;
}
.voice-add-btn:active {
  background: #FFB300;
  transform: scale(0.97);
}
.go-btn {
  width: 60px;
  min-width: 45px;
  max-width: 80px;
  background: linear-gradient(90deg, #FFA726 0%, #FFD600 100%);
  color: #fff;
  border: none;
  border-radius: 12px;
  padding: 2px 4px;
  font-size: 11px;
  font-weight: bold;
  height: 22px;
  line-height: 18px;
  margin-left: 8px;
  margin-right: 80px;
  margin-top: 0;
  box-shadow: 0 2px 8px rgba(255, 214, 0, 0.10);
  align-items: center;
  justify-content: center;
  transition: background 0.2s, color 0.2s, transform 0.1s;
}
.go-btn:active {
  background: #FFB300;
} 

.achievement-item {
  position: relative;
}
.achieve-reward {
  position: absolute;
  right: 18px;
  top: 50%;
  transform: translateY(-50%);
  margin: 0;
  z-index: 2;
}
.achieve-content {
  padding-right: 90px;
} 

.locked-reward-wrap {
  position: absolute;
  right: 18px;
  top: 50%;
  transform: translateY(-50%);
  z-index: 2;
}
.achieve-reward.locked {
  position: static;
} 

.achieve-btn-row {
  position: absolute;
  right: 24px;
  top: 20px;
  display: flex;
  justify-content: flex-end;
  margin-bottom: 0;
  width: auto;
} 

.leaderboard-item .user {
  font-size: 15px;
  font-weight: bold;
  color: #ff69b4;
}
.leaderboard-item .score {
  font-size: 13px;
  color: #ff69b4;
}
.leaderboard-item .rank {
  font-size: 15px;
  font-weight: bold;
  color: #ffb300;
} 

.voice-autoplay-btn {
  min-width: 80px;
}

