.container {
  background: #fffbe6;
  border-radius: 24px;
  padding: 24px 16px 16px 16px;
  min-height: 100vh;
}
.section-title {
  font-size: 18px;
  font-weight: bold;
  color: #ff6f91;
  margin: 24px 0 12px 0;
  letter-spacing: 1px;
  text-shadow: 0 2px 8px #fffde7;
}
.achievement-list {
  margin-top: 8px;
}
.achievement-item {
  display: flex;
  align-items: center;
  margin: 14px 0;
  padding: 16px 12px;
  background: #fff;
  border-radius: 24px;
  box-shadow: 0 4px 24px rgba(255, 214, 0, 0.13);
  position: relative;
  transition: box-shadow 0.2s;
  border-left: 8px solid #FFD600;
}
.achievement-item.unlocked::before {
  background: #FFD600;
}
.achievement-item.locked::before {
  background: #eee;
}

.achieve-icon {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  margin-right: 12px;
  background: #FFF9E1;
  border-radius: 50%;
  border: 2px solid #FFD600;
  flex-shrink: 0;
}
.achievement-item.locked .achieve-icon {
  background: #f5f5f5;
  border-color: #eee;
  color: #bbb;
}

.achieve-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 6px;
  min-height: 24px;
}
.achieve-name {
  font-size: 15px;
  font-weight: bold;
  color: #ff6f91;
  margin-right: 4px;
  white-space: nowrap;
}
.achieve-reward {
  background: #FFD600;
  color: #fff;
  font-size: 10px;
  font-weight: bold;
  border-radius: 8px;
  padding: 1px 8px;
  box-shadow: 0 2px 8px #FFD60033;
  white-space: nowrap;
}
.achieve-reward.locked {
  background: #eee;
  color: #bbb;
  font-size: 10px;
  font-weight: bold;
  border-radius: 8px;
  padding: 1px 8px;
  white-space: nowrap;
}
.achieve-detail {
  margin-top: 2px;
  font-size: 11px;
  color: #888;
  display: flex;
  gap: 6px;
}
.achieve-type {
  color: #FFA726;
}
.reward-btn-container {
  display: flex;
  align-items: center;
  gap: 3px;
  max-width: 120px;
  flex-shrink: 0;
}

.go-btn {
  font-size: 9px;
  color: #fff;
  background: #FFA726;
  padding: 1px 3px;
  border-radius: 8px;
  border: none;
  box-shadow: 0 1px 2px rgba(255, 167, 38, 0.3);
  line-height: 1.2;
  white-space: nowrap;
  min-width: 40px;
  text-align: center;
}

.achievement-item {
  overflow: hidden;
}

.achieve-btn-row {
  display: none;
}

.achieve-condition {
  color: #888;
}