<view class="chat-container">
  <view class="chat-header">
    <text class="chat-title"> TruFit AI</text>
    <view class="header-actions">
      <button class="clear-btn" bindtap="clearChat">清空记录</button>
    </view>
  </view>

  <view wx:if="{{showRoleSelection}}" class="role-selection-container">
    <view class="role-selection-header">
      <text class="role-selection-title">选择您的AI助手风格</text>
      <text class="role-selection-subtitle">不同风格的助手会以不同的方式与您交流</text>
    </view>
    
    <view class="roles-container">
      <view wx:for="{{roles}}" wx:key="id" class="role-item" bindtap="selectRole" data-role-id="{{item.id}}">
        <image class="role-avatar" src="{{item.avatar}}"></image>
        <view class="role-info">
          <text class="role-name">{{item.name}}</text>
          <text class="role-description">{{item.description}}</text>
        </view>
        <view class="role-selected-icon" wx:if="{{selectedRole && selectedRole.id === item.id}}">
          <text class="selected-text">已选择</text>
        </view>
      </view>
    </view>
  </view>

  <scroll-view 
    wx:else
    class="chat-messages" 
    scroll-y="true" 
    scroll-into-view="{{scrollIntoView}}" 
    scroll-with-animation="true"
    enable-flex="true"
    enhanced="true"
    bounces="true"
    style="padding-bottom: {{keyboardHeight}}px"
    catchtap="preventTap">
    <view class="messages-container">
      <view wx:for="{{messages}}" wx:key="index" class="message-item {{item.type === 'user' ? 'message-user' : 'message-ai'}}" id="msg-{{index}}">
        <view wx:if="{{item.type === 'user'}}" class="user-message">
          <view class="message-bubble user-bubble">
            <text class="message-text">{{item.content}}</text>
          </view>
          <image class="avatar user-avatar" src="/images/guest-icon.svg"></image>
        </view>

        <view wx:if="{{item.type === 'ai'}}" class="ai-message">
          <image class="avatar ai-avatar" src="{{selectedRole ? selectedRole.avatar : '/images/柯基.png'}}"></image>
          <view class="message-bubble ai-bubble">
            <text class="message-text">{{item.content}}</text>
            <view wx:if="{{item.loading}}" class="loading-indicator">
              <view class="dot dot1"></view>
              <view class="dot dot2"></view>
              <view class="dot dot3"></view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </scroll-view>

  <view wx:if="{{!showRoleSelection}}" class="chat-input-container" catchtap="preventTap">
    <view class="input-box">
      <textarea 
        class="message-input" 
        placeholder="输入您的问题，按回车发送..."
        value="{{inputValue}}"
        bindinput="onInputChange"
        bindconfirm="sendMessage"
        auto-height
        maxlength="500"
        confirm-type="send"
        focus="{{focusInput}}"
      ></textarea>
    </view>
  </view>
  
  <view wx:if="{{!showRoleSelection}}" class="reselect-role-container">
    <button class="reselect-role-btn" bindtap="reselectRole">重新选择助手风格</button>
  </view>
</view>