/* pages/about-us/about-us.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 100rpx;
  background-color: #fff;
  min-height: 100vh;
  box-sizing: border-box;
}

.app-icon {
  margin-top: 80rpx;
  width: 180rpx;
  height: 180rpx;
  border-radius: 24rpx;
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 32rpx;
  color: #333;
}

.app-version {
  font-size: 28rpx;
  color: #999;
  margin-top: 30rpx;
}

.btn {
  width: 600rpx !important;
  height: 88rpx;
  border-radius: 32rpx;
  font-size: 24rpx;
  margin-top: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.wechat-btn {
  background-color: #FFD700;
  color: #333;
}

.email-btn {
  background-color: #FFD700;
  color: #333;
}

.agreement {
  display: flex;
  margin-top: 80rpx;
}

.agreement-item {
  font-size: 26rpx;
  color: #333;
  margin: 0 30rpx;
  margin-top: 300rpx;
}

.footer {
  margin-top: 100rpx;
  text-align: center;
}

.footer-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  display: block;
}