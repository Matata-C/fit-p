/* 统一运动记录页风格为首页/分析页风格 */
.container {
  padding: 24px 16px 16px 16px;
  min-height: 100vh;
  background: #fff;
}
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24px;
}
.title {
  font-size: 20px;
  font-weight: bold;
  color: #ff6f91;
  display: flex;
  align-items: center;
  gap: 6px;
}
.add-button {
  font-size: 16px;
  color: #b07b00;
  background: linear-gradient(90deg, #FFD600 0%, #FFF6D1 100%);
  border: none;
  border-radius: 45rpx;
  padding: 0 32rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  font-weight: bold;
  box-shadow: 0 2px 8px rgba(255, 214, 0, 0.10);
}
.exercise-list {
  background-color: #fff;
  border-radius: 24px;
  padding: 24px 20px;
  box-shadow: 0 4px 24px rgba(255, 214, 0, 0.13);
}
.exercise-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #FFD600;
}
.exercise-item:last-child {
  border-bottom: none;
}
.exercise-info {
  flex: 1;
}
.exercise-name {
  font-size: 18px;
  color: #222;
  margin-bottom: 8rpx;
  font-weight: bold;
}
.exercise-time {
  font-size: 14px;
  color: #888;
}
.calories-info {
  display: flex;
  align-items: center;
}
.exercise-calories {
  font-size: 18px;
  color: #FFD600;
  font-weight: bold;
  margin-right: 16rpx;
}
.delete-btn {
  width: 36rpx;
  height: 36rpx;
  background-color: #f5f5f5;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #E53935;
  font-size: 24rpx;
}
.total-section {
  margin-top: 24px;
  padding-top: 16px;
  border-top: 1px solid #FFD600;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.total-label {
  font-size: 16px;
  color: #888;
}
.total-value {
  font-size: 18px;
  color: #FFD600;
  font-weight: bold;
}
.no-records {
  padding: 60rpx 0;
  text-align: center;
  color: #bbb;
  font-size: 15px;
}
.dialog-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}
.dialog-container {
  position: fixed;
  left: 50rpx;
  right: 50rpx;
  top: 45%;
  transform: translateY(-45%);
  background-color: #fffbe6;
  border-radius: 28px;
  padding: 40rpx 30rpx;
  z-index: 1001;
  max-height: 80vh;
  overflow-y: auto;
  box-shadow: 0 4px 24px rgba(255, 214, 0, 0.13);
}
.dialog-title {
  font-size: 20px;
  font-weight: bold;
  color: #ff6f91;
  text-align: center;
  margin-bottom: 30rpx;
}
.common-exercises {
  margin-bottom: 30rpx;
}
.common-title {
  font-size: 15px;
  color: #888;
  margin-bottom: 16rpx;
}
.common-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}
.common-item {
  flex: 0 0 calc(50% - 8rpx);
  box-sizing: border-box;
  margin-bottom: 16rpx;
}
.common-name {
  font-size: 16px;
  color: #222;
  margin-bottom: 10rpx;
  font-weight: bold;
}
.common-calories {
  font-size: 14px;
  color: #FFD600;
}
.input-group {
  margin-bottom: 24rpx;
}
.input-label {
  font-size: 15px;
  color: #888;
  margin-bottom: 12rpx;
  display: block;
}
.input-field {
  width: 100%;
  height: 48rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 16px;
  color: #222;
  margin-bottom: 10rpx;
  line-height: 48rpx;
  border: 1px solid #FFD600;
}
.dialog-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}
.cancel-button, .save-button {
  width: 45%;
  height: 40rpx;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 15px;
  text-align: center;
  font-weight: bold;
  border: none;
}
.cancel-button {
  background-color: #f5f5f5;
  color: #888;
}
.save-button {
  background: linear-gradient(90deg, #FFD600 0%, #FFF6D1 100%);
  color: #b07b00;
} 