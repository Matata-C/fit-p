.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.add-button {
  font-size: 28rpx;
  color: #FFD600;
  background-color: rgba(74, 192, 80, 0.1);
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
}

.exercise-list {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.exercise-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.exercise-item:last-child {
  border-bottom: none;
}

.exercise-info {
  flex: 1;
}

.exercise-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.exercise-time {
  font-size: 24rpx;
  color: #999;
}

.calories-info {
  display: flex;
  align-items: center;
}

.exercise-calories {
  font-size: 32rpx;
  color: #FFD600;
  font-weight: 500;
  margin-right: 16rpx;
}

.delete-btn {
  width: 48rpx;
  height: 48rpx;
  background-color: #f5f5f5;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
  font-size: 36rpx;
}

.total-section {
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.total-label {
  font-size: 28rpx;
  color: #666;
}

.total-value {
  font-size: 32rpx;
  color: #FFD600;
  font-weight: bold;
}

.no-records {
  padding: 60rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.dialog-container {
  position: fixed;
  left: 50rpx;
  right: 50rpx;
  top: 45%;
  transform: translateY(-45%);
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  z-index: 1001;
  max-height: 80vh;
  overflow-y: auto;
}

.dialog-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
}

.common-exercises {
  margin-bottom: 30rpx;
}

.common-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.common-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.common-item {
  width: calc(50% - 16rpx);
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
  box-sizing: border-box;
  min-height: 110rpx;
}

.common-name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.common-calories {
  font-size: 26rpx;
  color: #FFD600;
}

.input-group {
  margin-bottom: 24rpx;
}

.input-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: block;
}

.input-field {
  width: 100%;
  height: 90rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
  line-height: 90rpx;
}

.dialog-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.cancel-button, .save-button {
  width: 45%;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  text-align: center;
}

.cancel-button {
  background-color: #f2f2f2;
  color: #666;
}

.save-button {
  background-color: #FFD600;
  color: #fff;
} 