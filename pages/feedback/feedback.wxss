/* pages/feedback/feedback.wxss */
.container {
  padding: 24rpx;
  background-color: #fff;
  min-height: 100vh;
  box-sizing: border-box;
}

.feedback-banner {
  width: 100%;
  height: 260rpx;
  border-radius: 44rpx;
}

.faq-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6f91;
  align-items: center;
  margin: 30rpx 20rpx;
}

.faq-list {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 0 12rpx rgba(255, 214, 0, 0.4);
  overflow: hidden;
}
.faq-item {
  height: 50rpx;
  padding: 24rpx 20rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
  border-bottom: 2rpx solid #f5f5f5;
}
.faq-item:last-child {
  border-bottom: none;
}

.submit-btn {
  width: 600rpx !important;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #B07B00;
  background: linear-gradient(to right,#FFD700, #FFF5CD);
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-top: 400rpx;
}