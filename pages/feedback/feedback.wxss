/* pages/feedback/feedback.wxss */
.container {
  padding: 24rpx;
  background-color: #fff;
  min-height: 100vh;
  box-sizing: border-box;
}

.feedback-banner {
  width: 100%;
  height: 260rpx;
  border-radius: 44rpx;
}

.faq-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  align-items: center;
  margin: 30rpx 20rpx;
}

.faq-list {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}
.faq-item {
  height: 46rpx;
  padding: 24rpx 20rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 2rpx solid #f5f5f5;
}
.faq-item:last-child {
  border-bottom: none;
}

.submit-btn {
  width: 400rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #FFD700;
  color: #333;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-top: 400rpx;
}