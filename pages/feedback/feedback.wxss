/* pages/feedback/feedback.wxss */
.container {
  padding: 24rpx;
  background-color: #fff;
  min-height: 100vh;
  box-sizing: border-box;
}

.feedback-banner {
  width: 100%;
  height: 280rpx;
  border-radius: 44rpx;
}

.faq-section {
  width: 690rpx;
  height: 690rpx;
  border: 6rpx solid #FFD600;
  background-color: #FFFBE6;
  border-radius: 30rpx;
}
.faq-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #ff6f91;
  text-align: center;
  margin: 30rpx 20rpx;
}

.faq-list {
  width: 660rpx;
  margin:auto;
  background-color: #FFFBE6;
  border-radius: 16rpx;
  overflow: hidden;
}
.faq-item {
  height: 50rpx;
  margin-bottom: 20rpx;
  padding: 24rpx 20rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
  background-color: #FFF3B0;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
}

.submit-btn {
  width: 600rpx !important;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #B07B00;
  background: linear-gradient(to right,#FFD700, #FFF5CD);
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-top: 280rpx;
}