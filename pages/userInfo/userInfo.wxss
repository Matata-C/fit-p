/* pages/userInfo/userInfo.wxss */
.container {
  padding: 32rpx;
  background-color: #fff;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.section {
  background-color: #fff;
  margin-bottom: 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.info-item {
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid #f5f5f5;
  padding: 24rpx 32rpx;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #333;
  width: 160rpx;
}

.value, .edit-input {
  font-size: 28rpx;
  color: #8D8D8D;
  flex: 1;
  text-align: right;
}

.edit-input {
  padding: 0;
  height: 50rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.picker-view {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  flex: 1;
  font-size: 28rpx;
  color: #8D8D8D;
}

.logout-btn {
  width: 700rpx !important;
  height: 92rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #FFD700;
  color: #333;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 46rpx;
  margin: 60rpx 0;
}

.bottom-info {
  margin-top: 160rpx; 
  text-align: center; 
  padding: 32rpx 0; 
}

.desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
  display: block; 
  margin-bottom: 30rpx; 
}

.delete-account {
  font-size: 28rpx;
  color: #999;
  display: block;
}