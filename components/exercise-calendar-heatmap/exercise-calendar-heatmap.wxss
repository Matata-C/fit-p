.calendar-heatmap-container {
  width: 100%;
  background: #fff;
  border-radius: 24px;
  box-shadow: 0 4px 24px rgba(255, 214, 0, 0.13);
  padding: 24rpx 12rpx 20rpx 12rpx;
  margin: 0 auto 32rpx auto;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.calendar-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6f91;
  margin-bottom: 18rpx;
  display: flex;
  align-items: center;
}
.calendar-emoji {
  font-size: 32rpx;
  margin-left: 8rpx;
}
.calendar-grid {
  width: 100%;
  max-width: 420rpx;
}
.calendar-weekdays {
  display: flex;
  flex-direction: row;
  margin-bottom: 8rpx;
}
.calendar-weekday {
  flex: 1;
  text-align: center;
  font-size: 22rpx;
  color: #bbb;
  font-weight: 500;
}
.calendar-row {
  display: flex;
  flex-direction: row;
  margin-bottom: 4rpx;
}
.calendar-cell {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  min-width: 0;
}
.cell-bg {
  width: 44rpx;
  height: 44rpx;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 0 2rpx;
  transition: background 0.2s;
}
.level-0 { background: #f8f8f8; }
.level-1 { background: #ffe0e9; }
.level-2 { background: #ffd6a5; }
.level-3 { background: #b4f8c8; }
.level-4 { background: #a0e7e5; }
.cell-emoji {
  font-size: 22rpx;
  margin-bottom: 2rpx;
}
.cell-value {
  font-size: 18rpx;
  color: #888;
}
.no-data {
  width: 100%;
  height: 200px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #999;
}
.no-data-icon {
  font-size: 48px;
  margin-bottom: 10px;
}
.no-data-text {
  font-size: 16px;
}
.no-data-tip {
  margin-top: 8px;
  font-size: 14px;
  color: #bbb;
} 