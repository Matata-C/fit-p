.exercise-line-chart-container {
  width: 100%;
  position: relative;
  box-sizing: border-box;
  margin: 0 auto 32rpx auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
  border-radius: 24px;
  box-shadow: 0 4px 24px rgba(255, 214, 0, 0.13);
  padding: 24rpx 12rpx 12rpx 12rpx;
}
.chart-canvas-wrapper {
  width: 100%;
  display: flex;
  justify-content: center;
  position: relative;
}
.exercise-line-chart-canvas {
  width: 100%;
  display: block;
}
.chart-legend {
  display: flex;
  justify-content: center;
  margin-top: 10px;
  flex-wrap: wrap;
}
.legend-item {
  display: flex;
  align-items: center;
  margin: 0 10px 5px;
}
.legend-color {
  width: 16px;
  height: 16px;
  border-radius: 4px;
  margin-right: 6px;
}
.legend-steps {
  background-color: #FFD600;
}
.legend-duration {
  background-color: #FFB6B9;
}
.legend-calories {
  background-color: #A0E7E5;
}
.legend-text {
  font-size: 14px;
  color: #666;
}
.no-data {
  width: 100%;
  height: 200px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #999;
}
.no-data-icon {
  font-size: 48px;
  margin-bottom: 10px;
}
.no-data-text {
  font-size: 16px;
}
.no-data-tip {
  margin-top: 8px;
  font-size: 14px;
  color: #bbb;
} 