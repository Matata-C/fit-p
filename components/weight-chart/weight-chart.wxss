.weight-chart-container {
  width: 100%;
  position: relative;
  box-sizing: border-box;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.chart-canvas-wrapper {
  width: 100%;
  display: flex;
  justify-content: center;
  position: relative;
}

.weight-chart-canvas {
  width: 100%;
  display: block;
}

.chart-legend {
  display: flex;
  justify-content: center;
  margin-top: 10px;
  flex-wrap: wrap;
}

.legend-item {
  display: flex;
  align-items: center;
  margin: 0 10px 5px;
}

.legend-color {
  width: 12px;
  height: 12px;
  border-radius: 2px;
  margin-right: 4px;
}

.legend-increase {
  background-color: #ff5252;
}

.legend-maintain {
  background-color: #ffc107;
}

.legend-decrease {
  background-color: #4caf50;
}

.legend-text {
  font-size: 12px;
  color: #666;
}

.no-data {
  width: 100%;
  height: 200px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #999;
}

.no-data-icon {
  font-size: 48px;
  margin-bottom: 10px;
}

.no-data-text {
  font-size: 14px;
}

/* 小屏幕设备优化 */
@media screen and (max-width: 320px) {
  .legend-item {
    margin: 0 6px 5px;
  }
  
  .legend-text {
    font-size: 11px;
  }
  
  .no-data {
    height: 180px;
  }
}

/* 大屏幕设备优化 */
@media screen and (min-width: 768px) {
  .weight-chart-container {
    max-width: 90%;
  }
  
  .legend-item {
    margin: 0 16px 8px;
  }
  
  .legend-color {
    width: 14px;
    height: 14px;
  }
  
  .legend-text {
    font-size: 14px;
  }
  
  .no-data {
    height: 240px;
  }
  
  .no-data-icon {
    font-size: 64px;
  }
  
  .no-data-text {
    font-size: 16px;
  }
}

.weight-chart {
  width: 100%;
  height: 400rpx;
}

.legend {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
  width: 100%;
}

.legend-item {
  display: flex;
  align-items: center;
  margin: 0 15rpx;
}

.legend-color.up {
  background-color: #ff4d4f;
}

.legend-color.down {
  background-color: #52c41a;
}

.legend-color.same {
  background-color: #1890ff;
}

.no-data-hint {
  font-size: 12px;
  color: #b0b0b0;
  text-align: center;
}

.weight-canvas {
  width: 100%;
  margin-top: 10rpx;
}

.no-data-tip {
  color: #999;
  font-size: 28rpx;
  text-align: center;
  margin-top: 100rpx;
} 